class Student {
	 String name;
	 String subject;
	 String grade;
	 String mutualSubject;
	 String courseInformation;

	 public Student(String name, String subject, String mutualSubject,String courseInformation) {
	  this.name = name;
	  this.subject = subject;
	  this.grade = mutualSubject;
	  this.mutualSubject = courseInformation;
	}
}

class StuManager {
	 public static ArrayList<Student> list = new ArrayList<Student>();
}


